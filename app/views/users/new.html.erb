<%= form_for @user do |f| %>
    <br>
    <h1>Sign Up </h1>

<div class="card signup-card">

<!-- print validation errors -->
<% if @user.errors.present? %>
    <div class="alert alert-danger" role="alert">
    |
      <% @user.errors.full_messages.each do |error| %>
      <span>
        <%= error %> 
      </span>
      |
      <% end %>
    </div>
    <% end %>
<!--end  print validation errors -->


  <div class="card-body">
  <div class="mb-3">
  <%= f.label :name, { class: "form-form-label" } %>
   <%= f.text_field :name, { class: "form-control", placeholder: "Name" } %>
  </div>
  
  <div class="mb-3">
  <%= f.label :email, { class: "form-form-label" } %>
  
  <%= f.text_field :email, { class: "form-control", placeholder: "Email" } %> 
  </div>
  <div class="mb-3">
  <%= f.label :password, { class: "form-form-label" } %>
  <%= f.password_field :password, { class: "form-control", placeholder: "Password" } %> 
  </div>
  <div class="mb-3">
  
  <%= f.label :age, { class: "form-form-label" } %>
  <%= f.number_field :age, { class: "form-control", placeholder: "Age" } %> 
  </div>

  <div class="mb-3">
  <%= f.label :gender, { class: "form-form-label" } %>
    <%= f.text_field :gender, { class: "form-control", placeholder: "Gender" } %> 
  </div>

  <div class="mb-3">
  <%= f.label :phone_number, { class: "form-form-label" } %>
  <%= f.telephone_field :phone_number, { class: "form-control", placeholder: "Phone number" } %> 
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>    
  </div>
  </div>
<% end %>